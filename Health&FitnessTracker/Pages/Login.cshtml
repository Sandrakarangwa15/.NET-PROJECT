@page
@model Health_FitnessTracker.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Health_FitnessTracker</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-styles.css" asp-append-version="true" />
    <style>
        /* Color scheme */
        :root {
            --primary-color: #6a0dad; /* Purple */
            --secondary-color: #e0e0f0; /* Light grey */
            --button-hover-color: #5a08b8;
        }

        /* Form Container */
        .form-container {
            margin-top: 5%;
            max-width: 450px;
            margin-left: auto;
            margin-right: auto;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-container h2 {
            text-align: center;
            color: var(--primary-color);
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 30px;
            border-color: #ccc;
            padding-left: 40px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 5px rgba(106, 13, 173, 0.7);
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-group .icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 30px;
            font-weight: 600;
            width: 100%;
            padding: 12px;
            font-size: 16px;
        }

        .btn-primary:hover {
            background-color: var(--button-hover-color);
            border-color: var(--button-hover-color);
        }

        .alert-info {
            background-color: var(--primary-color);
            color: #fff;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .show-password-container {
            display: flex;
            align-items: center;
            color: var(--primary-color);
            cursor: pointer;
        }

        .show-password-container input[type="checkbox"] {
            margin-right: 10px;
        }

        footer a {
            color: #fff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        .signup-link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: var(--primary-color);
        }

        .signup-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <header>
        <!-- You can add a header here if needed -->
    </header>

    <div class="container form-container">
        <!-- Success message at the top of the form -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-3">
                @Model.Message
            </div>
        }

        <h2>Welcome Back!</h2>

        <form method="post">
            <div class="mb-3 position-relative">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
            </div>

            <div class="mb-3 position-relative">
                <label for="Password" class="form-label">Password</label>
                <div class="position-relative">
                    <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password" required />
                    <span class="icon"><i class="bi bi-lock"></i></span>
                </div>
            </div>

            <div class="show-password-container">
                <input type="checkbox" id="showPassword" onclick="togglePassword()"> Show Password
            </div>

            <button type="submit" class="btn btn-primary">Log In</button>
        </form>

        <!-- Link to Sign Up Page -->
        <div class="signup-link">
            Don't have an account? <a href="/Signup">Sign Up</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script>
        function togglePassword() {
            var passwordField = document.getElementById("Password");
            if (passwordField.type === "password") {
                passwordField.type = "text";
            } else {
                passwordField.type = "password";
            }
        }
    </script>
</body>
</html>
